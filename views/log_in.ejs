<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SpyThere</title>
    <link rel="stylesheet" href="log_in.css">
</head>

<body>
    <main>
        <section>
            <form class="login" action="/login" method="post">
                <div class="login-form">
                    <h1 id="login">LOG IN</h1>

                    <% if (typeof error !== 'undefined' && error) { %>
                        <p style="color: red; font-weight: bold;"><%= error %></p>
                    <% } %>

                    <div id="email-form" class="p-e-form">
                        <label for="email">Email:</label>
                        <input type="email" name="email" id="email" required>
                    </div>

                    <div id="password-form" class="p-e-form">
                        <label for="password">Password:</label>
                        <div class="password-container">
                            <input type="password" name="password" id="password" required>
                            <button type="button" class="toggle-password" onclick="togglePassword('password')">
                                <img src="/assets/eye.svg" alt="Toggle password visibility" id="password-toggle-icon">
                            </button>
                        </div>
                    </div>

                    <input class="polygon-shape" type="submit" value="SPY">
                </div>
            </form>
        </section>
    </main>
    <script>
        function togglePassword(inputId) {
            const passwordInput = document.getElementById(inputId);
            const icon = document.getElementById(inputId + '-toggle-icon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.src = '/assets/eye-off.svg';
            } else {
                passwordInput.type = 'password';
                icon.src = '/assets/eye.svg';
            }
        }
    </script>
</body>

</html>
